@model List<Phim>


<div class="row">
    <div class="col-md-6">
        <h2>LIST PHIM</h2>
    </div>
    <div class="col-md-6 text-right">
        <a asp-action="Add" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill"></i> THÊM PHIM
        </a>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Tựa Đề</th>
            <th>Thể Loại</th>
            <th>Giá Vé</th>
            <th>Thời Lượng</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
        <tr>
            <td>@x.TuaDe</td>
            <td>
                @if (x.TrongNuoc == true)
                {


                    <span>Việt Nam</span>
                }
                else
                {
                    <span>Nước Ngoài</span>
                }
                    </td>
            <td>@x.GiaVe</td>
            <td>@x.ThoiLuong</td>
            <td>
                <a asp-action="Update" asp-route-id="@x.Id" class="btn btn-success">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a asp-action="Delete" asp-route-id="@x.Id" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>
